          {
            "type": "url",
            "id": "image_1_link",
            "label": "Image 2 link"
          }, 


        {
			"type": "image_picker",
			"id": "image2",
			"label": "Image"
		},
        {
            "type": "text",
            "id": "image_2_text",
            "label": "Text on hover",
            "default": "Coffee & Biscuits"  
          },     
          {
            "type": "url",
            "id": "image_2_link",
            "label": "Image 3 link"
          }, 


        {
			"type": "image_picker",
			"id": "image3",
			"label": "Image"
		},
        {
            "type": "text",
            "id": "image_3_text",
            "label": "Text on hover",
            "default": "Blue Skies"  
          },     
          {
            "type": "url",
            "id": "image_3_link",
            "label": "Image 4 link"
          }
	],
