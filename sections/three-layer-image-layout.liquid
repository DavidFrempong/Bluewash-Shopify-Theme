{% schema %}
  {
    "name": "Three Image Layout",
    "settings": [
    {
			"type": "select",
			"id": "image_collage_grid",
			"options": [{
					"value": "2",
					"label": "2 Images"
				},
				{
					"value": "4",
					"label": "4 Images"
				}
			],
			"default": "4",
