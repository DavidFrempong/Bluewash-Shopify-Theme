{{ 'two-image-layout.css' | asset_url | stylesheet_tag }}

<div class="main_content">
  <div class="heading">
    <h2 class="title" style="color: {{section.blocks.settings.title_color}}">{{ settings.title | escape }}</h2>
    <p class="paragraph">Bluewash is a Shopify 2.0 Template made for Men's Body Care Shopify store owners. Learn
      more about us
      <a href="#">here.</a>
    </p>
  </div>
  <div class="images">
    <div class="image_container">
      <img src="/images/castlebeard-co-0D6aORtbl-c-unsplash.jpg" />
      <div class="image_information">
        <h3>Title here</h3>
        <p>Paragraph here</p>
        <div class="image_link">
          <a href="#">Link here</a>
        </div>
      </div>
    </div>
    <div class="image_container">
      <img src="/images/castlebeard-co-0D6aORtbl-c-unsplash.jpg" />
      <div class="image_information">
        <h3>Title here</h3>
        <p>Paragraph here</p>
        <div class="image_link">
          <a href="#">Link here</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Two Image Layout",
    "class": "image-layout-full-width",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Hi, we're Bluewash.",
        "default": "Hi, we're Bluewash."
      }
    ],
    "blocks": [
        {
        "type": "image",
        "name": "Image",
        "limit": 2,
        "settings": [
          {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#000000"
          },
          {
          "type": "color",
          "id": "paragraph_color",
          "label": "Paragraph Color",
          "default": "#000000"
          }
        ]
      }
    ],
    "presets": [{
		"name": "Two Image Layout",
		"blocks": [{
				"type": "image"
			},
			{
				"type": "image"
			}
		]
	}]
  }
{% endschema %}